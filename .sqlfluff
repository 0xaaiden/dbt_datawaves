[sqlfluff]
dialect = sparksql
templater = dbt

[sqlfluff:rules]
tab_space_size = 2
max_line_length = 120

[sqlfluff:rules:L010]
# Keywords
capitalisation_policy = lower

[sqlfluff:rules:L014]
# Unquoted identifier
extended_capitalisation_policy = lower


[sqlfluff:rules:L030]
# Function names
capitalisation_policy = lower

[sqlfluff:rules:L040]
# Null & Boolean Literals
capitalisation_policy = lower
